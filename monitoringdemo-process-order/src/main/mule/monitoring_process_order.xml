    <flow name="post:\doOrder:monitoring_process_order-config">
		<custom-metrics:send doc:name="Send Custom Metric" doc:id="7919f3b7-6718-4505-a507-862ef00bc0f7" metricName="monitoringSales">
			<custom-metrics:dimensions >
				<custom-metrics:dimension dimensionName="customerId" value="#[attributes.queryParams.customerId]" />
			</custom-metrics:dimensions>
			<custom-metrics:facts >
				<custom-metrics:fact factName="price" value="#[attributes.queryParams.price]" />
			</custom-metrics:facts>
		</custom-metrics:send>
		<logger level="INFO" message="post:\doOrder:monitoring_process_order-config" />
    </flow>
</mule>
