    </http:listener-config>
    <apikit:config name="monitoring_process_order-config" api="resource::718f0e99-9f0c-43f6-9976-6763c79c63f0:monitoring_process_order:1.0.0:raml:zip:monitoring_process_order.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
